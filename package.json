{
  "name": "arb-translator",
  "publisher": "DevStory",
  "license": "SEE LICENSE IN LICENSE",
  "displayName": "ARB Translator",
  "description": "Translates ARB files to Google Translator.",
  "version": "0.1.15",
  "engines": {
    "vscode": "^1.84.0"
  },
  "author": {
    "name": "DevStory"
  },
  "icon": "assets/logo.png",
  "categories": [
    "Language Packs"
  ],
  "repository": "https://github.com/nero-angela/arb-translator",
  "homepage": "https://devstory.co.kr",
  "keyword": [
    "arb",
    "translator",
    "translater",
    "google",
    "devstory"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "ArbTranslator",
      "properties": {
        "arbTranslator.config": {
          "type": "object",
          "properties": {
            "arbPrefix": {
              "type": "string",
              "default": "",
              "description": "arb file prefix (e.g. if you have intl_en.arb file, prefix is \"intl_\")"
            },
            "sourceArbFilePath": {
              "type": "string",
              "default": "",
              "description": "Source arb file you want to translate"
            },
            "googleAPIKey": {
              "type": "string",
              "default": "",
              "markdownDescription": "Enter the Google API key. Please please refer to the [link](https://cloud.google.com/translate/docs/setup) and proceed with the API setting and API Key issuance process. (e.g., 1111111-2222-3333-4444-555555555555:aa)"
            },
            "historyFilePath": {
              "type": "string",
              "default": "",
              "description": "Path to save the last translated source arb file history (for tracking changes)"
            },
            "selectedLanguages": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "default": "",
                    "description": "Language name"
                  },
                  "arb": {
                    "type": "string",
                    "default": "",
                    "description": "arb file name"
                  }
                }
              },
              "description": "TODO : gist 링크 연결해서 샘플 보여주기"
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "arb-translator.translatePaid",
        "title": "arb translator : translate (paid : google API Key required)"
      },
      {
        "command": "arb-translator.translateFree",
        "title": "arb translator : translate (free)"
      },
      {
        "command": "arb-translator.createTranslationCache",
        "title": "arb translator : create translation cache from arb files"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "package": "rm -r out & vsce package",
    "publish": "npm run package && vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12"
  }
}